{
  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "outDir": "./build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
