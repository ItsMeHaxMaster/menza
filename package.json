{
  "name": "menza",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky || true"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "apps/api/**/*.{js,ts}": "pnpm --filter @menza/api lint:fix",
    "apps/web/**/*.{js,jsx,ts,tsx}": "pnpm --filter @menza/web lint:fix",
    "packages/types/**/*.{js,ts}": "pnpm --filter @menza/types lint:fix",
    "**/*.{js,jsx,ts,tsx,json,md,yml,yaml,css}": "prettier --write --ignore-unknown"
  }
}
